{% extends "layouts/main.twig" %}

{% block content %}
    <ul>
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
    </ul>
    <form action="{{ get_url('auth/login') }}" method="POST">
        <input name="Data[name]" placeholder="Введите логин">
        <input name="Data[password]" placeholder="Введите пароль">
        <button type="submit">Войти</button>
    </form>
{% endblock %}